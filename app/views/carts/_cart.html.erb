<table class="table table-hover">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Total Price</th>
     
    </tr>
  </thead>

 <tbody>
  <% unless cart.line_items.empty? %>

   <% @cart.line_items.each do |item| %>
      <tr>
        <td>
          <%=  item.quantity %>
          
        </td>
        <td>
         <%= item.product.name %>
        </td>
        <td>
          <%= number_to_currency(item.total_price) %>
        </td>
       <td><%= button_to 'Empty cart', @cart, method: :delete,
data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
       <td><%= button_to "Checkout", new_order_path, method: :get, class: 'btn btn-success' %></td>
       <td><%= link_to  "Add More Products", products_url, class: 'btn btn-info' %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

